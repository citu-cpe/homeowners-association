generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HO {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  email     String    @unique
  admin     Boolean   @default(false)
  password  String
  houseCode String
  tickets   Ticket[]
  invoices  Invoice[]
  products  Product[]
  orders    Order[]
}

model Product {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  status      String   @default("AVAILABLE")
  price       Float
  hoId        String
  ho          HO       @relation(fields: [hoId], references: [id])
  Order       Order[]
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  isPaid    Boolean  @default(false)
  quantity  Int
  amount    Float
  hoId      String
  ho        HO       @relation(fields: [hoId], references: [id])
}

model Ticket {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  status      String   @default("PENDING")
  category    String
  hoId        String
  resolution  String   @default("")
  ho          HO       @relation(fields: [hoId], references: [id])
}

model Invoice {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hoId        String
  paid        Boolean  @default(false)
  ho          HO       @relation(fields: [hoId], references: [id])
  invoiceName String
  amount      Float
}
